<!-- views/listings/new.ejs -->
<section>
  <h2>Create Listing</h2>
  <form method="POST" action="/listings/new" enctype="multipart/form-data">
    <label>Title<input type="text" name="title" required></label><br>
    <label>Description<textarea name="description"></textarea></label><br>
    <label>State<input type="text" name="state"></label><br>
    <label>LGA<input type="text" name="lga"></label><br>
    <label>Address<input type="text" name="address"></label><br>
    <label>Price<input type="number" name="price" step="0.01"></label><br>
    <label>Images (up to 4)<input type="file" name="images" accept="image/*" multiple></label><br>
    <button type="submit">Create</button>
  </form>
</section>
