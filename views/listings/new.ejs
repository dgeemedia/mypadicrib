<!-- views/listings/new.ejs -->
<section class="container">
  <h2>Create Listing</h2>
  <form method="POST" action="/listings/new" enctype="multipart/form-data">
    <label>Title
      <input type="text" name="title" required>
    </label>

    <label>Description
      <textarea name="description" rows="4"></textarea>
    </label>

    <label>State
      <select id="state-select" name="state" required></select>
    </label>

    <label>LGA
      <select id="lga-select" name="lga" required></select>
    </label>

    <label>Address
      <input type="text" name="address">
    </label>

    <label>Price (per night)
      <input type="number" name="price" step="0.01" required>
    </label>

    <input type="hidden" name="MAX_IMAGE_MB" value="<%= process.env.MAX_IMAGE_MB || 5 %>">

    <label>Images (up to 4)
      <input type="file" name="images" accept="image/*" multiple>
      <small>Max <%= process.env.MAX_IMAGE_MB || 5 %> MB per image.</small>
    </label>

    <label>Your photo (selfie) — required
      <input type="file" name="selfie" accept="image/*" required>
    </label>

    <label>ID card (front showing your face) — required
      <input type="file" name="id_card" accept="image/*" required>
    </label>

    <label>ID Number (NIN / Driver's Licence / Voter Card / International Passport) — required
      <input type="text" name="id_number" required>
    </label>


    <button type="submit">Create</button>
  </form>
</section>

