<!-- views/admin/dashboard.ejs -->
<section class="container">
  <h1>Admin Dashboard</h1>

  <!-- Pending Listings -->
  <% if (pending && pending.length) { %>
    <section>
      <h2>Pending Listings</h2>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Owner</th>
            <th>Price (per night)</th>
            <th>Verification</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% pending.forEach(function(l, idx) { %>
            <tr data-listing-id="<%= l.id %>" data-status="<%= (l.status||'').toLowerCase() %>">
              <td><%= idx + 1 %></td>
              <td><a href="/listings/<%= l.id %>"><%= l.title %></a></td>
              <td><%= l.owner_name || 'Unknown' %></td>
              <td>&#8358;<%= l.price %></td>
              <td>
                <% if (l.verification_id && l.selfie_path) { %>
                  <a href="/admin/verification-file/<%= l.verification_id %>/selfie" target="_blank" rel="noopener">View Selfie</a><br>
                <% } %>
                <% if (l.verification_id && l.id_card_path) { %>
                  <a href="/admin/verification-file/<%= l.verification_id %>/id_card" target="_blank" rel="noopener">View ID Card</a><br>
                <% } %>
                <% if (l.id_number) { %>
                  <small><strong>ID#:</strong> <%= l.id_number %></small>
                <% } %>
              </td>
              <td><%= new Date(l.created_at).toLocaleString() %></td>

              <td>
                <!-- Approve (direct submit) -->
                <form method="POST" action="/admin/listings/<%= l.id %>/approve" style="display:inline" class="listing-action-form" data-listing-id="<%= l.id %>">
                  <button type="submit">Approve</button>
                </form>

                <!-- Reject: uses modal; form contains hidden input that modal will fill -->
                <form method="POST" action="/admin/listings/<%= l.id %>/reject" style="display:inline" class="reject-form listing-action-form" data-listing-id="<%= l.id %>">
                  <input type="hidden" name="reason" class="reject-reason-input" value="">
                  <button type="button" class="btn-admin-action" data-action="reject" data-listing-id="<%= l.id %>">Reject</button>
                </form>

                <a href="/listings/<%= l.id %>" style="margin-left:8px">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  <% } else { %>
    <p>No pending listings.</p>
  <% } %>

  <hr>

  <!-- MANAGE EXISTING LISTINGS -->
  <section>
    <h2>Manage Listings</h2>

    <div style="display:flex; gap:12px; align-items:center; margin-bottom:8px;">
      <label>
        Show:
        <select id="listing-filter" aria-label="Filter listings">
          <option value="all">All</option>
          <option value="approved">Approved</option>
          <option value="pending">Pending</option>
          <option value="suspended">Suspended</option>
          <option value="payment_required">Payment required</option>
          <option value="deleted">Deleted</option>
          <option value="rejected">Rejected</option>
        </select>
      </label>

      <label>
        Per page:
        <select id="per-page" aria-label="Listings per page">
          <option value="5">5</option>
          <option value="10" selected>10</option>
          <option value="20">20</option>
          <option value="50">50</option>
        </select>
      </label>

      <div id="managed-listings-info" style="margin-left:auto; font-size:0.95em;"></div>
    </div>

    <% if (managedListings && managedListings.length) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Owner</th>
            <th>Price</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="managed-listings-body">
          <% managedListings.forEach(function(l, idx) { %>
            <tr data-listing-id="<%= l.id %>" data-status="<%= (l.status||'').toLowerCase() %>">
              <td><%= idx + 1 %></td>
              <td><a href="/listings/<%= l.id %>"><%= l.title %></a></td>
              <td><%= l.owner_name || 'Unknown' %></td>
              <td>&#8358;<%= l.price %></td>
              <td><%= l.status %></td>
              <td><%= new Date(l.created_at).toLocaleString() %></td>
              <td>
                <!-- Suspend (modal) -->
                <form method="POST" action="/admin/listings/<%= l.id %>/suspend" style="display:inline" class="listing-action-form" data-listing-id="<%= l.id %>">
                  <input type="hidden" name="reason" class="suspend-reason-input" value="">
                  <input type="hidden" name="suspended_until" class="suspended-until-input" value="">
                  <button type="button" class="btn-admin-action" data-action="suspend" data-listing-id="<%= l.id %>">Suspend</button>
                </form>

                <!-- Reactivate (modal) -->
                <form method="POST" action="/admin/listings/<%= l.id %>/reactivate" style="display:inline" class="listing-action-form" data-listing-id="<%= l.id %>">
                  <input type="hidden" name="reason" class="reactivate-reason-input" value="">
                  <button type="button" class="btn-admin-action" data-action="reactivate" data-listing-id="<%= l.id %>">Reactivate</button>
                </form>

                <!-- Delete (modal) -->
                <form method="POST" action="/admin/listings/<%= l.id %>/delete" style="display:inline" class="listing-action-form" data-listing-id="<%= l.id %>">
                  <input type="hidden" name="reason" class="delete-reason-input" value="">
                  <button type="button" class="btn-admin-action" data-action="delete" data-listing-id="<%= l.id %>">Delete</button>
                </form>

                <a href="/listings/<%= l.id %>" style="margin-left:8px">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div id="managed-listings-pagination" style="margin-top:10px;"></div>
    <% } else { %>
      <p>No listings to manage.</p>
    <% } %>
  </section>

  <hr>

  <!-- USERS MANAGEMENT -->
  <section>
    <h2>Users</h2>

    <div style="display:flex; gap:12px; align-items:center; margin-bottom:8px;">
      <label>
        Filter:
        <select id="user-filter" aria-label="Filter users">
          <option value="all">All</option>
          <option value="admins">Admins</option>
          <option value="staff">Staff</option>
          <option value="owners">Owners</option>
          <option value="active">Active</option>
          <option value="suspended">Suspended</option>
        </select>
      </label>

      <div id="users-info" style="margin-left:auto; font-size:0.95em;"></div>
    </div>

    <% if (users && users.length) { %>
      <table>
        <thead>
          <tr>
            <th>#</th><th>Name</th><th>Email</th><th>Role</th><th>Status</th><th>Actions</th>
          </tr>
        </thead>
        <tbody id="users-table-body">
          <% users.forEach(function(u, i){ %>
  <tr data-user-id="<%= u.id %>" data-role="<%= (u.role || 'owner') %>" data-status="<%= (u.status || '') %>">
    <td><%= i + 1 %></td>
    <td><%= u.name %></td>
    <td><%= u.email %></td>
    <td><%= u.role %></td>
    <td>
      <%= u.status %>
      <% if (u.suspended_until) { %>
        <br><small>until <%= new Date(u.suspended_until).toLocaleString() %></small>
      <% } %>
    </td>
    <td>
                <% if ((u.role||'').toLowerCase() !== 'staff' && (u.role||'').toLowerCase() !== 'admin') { %>
                  <!-- Suspend owner (modal) -->
                  <form method="POST" action="/admin/users/<%= u.id %>/suspend" class="suspend-form" data-user-id="<%= u.id %>" style="display:inline">
                    <input type="hidden" name="suspended_until" class="suspended-until-input" value="">
                    <input type="hidden" name="reason" class="suspend-reason-input" value="">
                    <button type="button" class="btn-admin-action suspend-user-btn" data-action="suspend-user" data-user-id="<%= u.id %>">Suspend</button>
                  </form>
                <% } else if ((u.role||'').toLowerCase() === 'staff') { %>
                  <!-- For staff, allow suspend too -->
                  <form method="POST" action="/admin/users/<%= u.id %>/suspend" class="suspend-form" data-user-id="<%= u.id %>" style="display:inline">
                    <input type="hidden" name="suspended_until" class="suspended-until-input" value="">
                    <input type="hidden" name="reason" class="suspend-reason-input" value="">
                    <button type="button" class="btn-admin-action suspend-user-btn" data-action="suspend-user" data-user-id="<%= u.id %>">Suspend</button>
                  </form>
                <% } %>

                <% if ((u.status||'').toLowerCase() === 'suspended') { %>
                  <form method="POST" action="/admin/users/<%= u.id %>/reactivate" class="reactivate-form" data-user-id="<%= u.id %>" style="display:inline">
                    <input type="hidden" name="reason" class="reactivate-reason-input" value="">
                    <button type="button" class="btn-admin-action reactivate-user-btn" data-action="reactivate-user" data-user-id="<%= u.id %>">Reactivate</button>
                  </form>
                <% } %>

                <form method="POST" action="/admin/users/<%= u.id %>/delete" class="delete-user-form" data-user-id="<%= u.id %>" style="display:inline">
                  <input type="hidden" name="reason" class="delete-reason-input" value="">
                  <button type="button" class="btn-admin-action" data-action="delete-user" data-user-id="<%= u.id %>">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div id="users-pagination" style="margin-top:10px;"></div>
    <% } else { %>
      <p>No users found.</p>
    <% } %>
  </section>

  <hr>

  <section>
    <h2>Create Staff Account</h2>
    <form method="POST" action="/admin/staff/create">
      <label>Name<br><input name="name" required></label><br>
      <label>Email<br><input name="email" type="email" required></label><br>
      <label>Phone<br><input name="phone"></label><br>
      <label>Password<br><input name="password" type="password" required></label><br>
      <button type="submit">Create Staff</button>
    </form>
  </section>

  <hr>

  <section>
    <h2>Add Provider (Laundry / Food)</h2>
    <form method="POST" action="/admin/providers/add">
      <label>Type<br>
        <select name="type" required>
          <option value="laundry">Laundry Provider</option>
          <option value="food">Food Vendor</option>
        </select>
      </label><br>

      <label>Name<br><input name="name" required></label><br>
      <label>Phone<br><input name="phone"></label><br>
      <label>Email<br><input name="email" type="email"></label><br>

      <button type="submit">Add Provider</button>
    </form>
  </section>

  <hr>

  <section>
    <h2>Admin Quick Links</h2>
    <ul>
      <li><a href="/admin">Refresh dashboard</a></li>
      <li><a href="/owner/dashboard">Go to owner dashboard</a></li>
      <li><a href="/listings">Browse listings (approved)</a></li>
      <li><a href="/messages">Inbox / Messages</a></li>
    </ul>
  </section>
</section>

<!-- Accessible modal (JS also capable of creating one if missing) -->
<div id="admin-action-modal" class="modal" aria-hidden="true" style="display:none;">
  <div class="modal-inner" role="dialog" aria-modal="true" style="background:#fff; padding:16px; max-width:520px; margin:40px auto; border-radius:6px;">
    <div id="admin-action-modal-desc" style="margin-bottom:8px; font-weight:600;"></div>
    <div style="margin-bottom:8px;">
      <label style="display:block;">Reason<br><input id="admin-action-reason" type="text" style="width:100%"></label>
    </div>
    <div id="admin-action-until" style="margin-bottom:8px; display:none;">
      <label style="display:block;">Until (optional)<br><input id="admin-action-until-input" type="datetime-local" style="width:100%"></label>
    </div>
    <div style="text-align:right;">
      <button id="admin-action-cancel" type="button">Cancel</button>
      <button id="admin-action-confirm" type="button" style="margin-left:8px;">Confirm</button>
    </div>
  </div>
</div>

<!-- Include the admin JS (make sure file is served from /public/js/admin-dashboard.js) -->
<script src="/js/admin-dashboard.js"></script>

<style>
  /* Modal backdrop & centering */
  #admin-action-modal {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 1200;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.45);
    padding: 20px;
  }
  #admin-action-modal[aria-hidden="false"] {
    display: flex;
  }

  /* Modal inner card */
  #admin-action-modal .modal-inner {
    width: 100%;
    max-width: 640px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.25);
    padding: 18px;
    transform: translateY(6px);
    transition: transform .18s ease, opacity .16s ease;
  }
  #admin-action-modal[aria-hidden="false"] .modal-inner {
    transform: translateY(0);
  }

  /* Modal content */
  #admin-action-modal #admin-action-modal-desc {
    font-size: 1rem;
    margin-bottom: 10px;
    color: #111;
  }
  #admin-action-modal input[type="text"],
  #admin-action-modal input[type="datetime-local"],
  #admin-action-modal select,
  #admin-action-modal textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 8px 10px;
    border: 1px solid #d6d6d6;
    border-radius: 6px;
    font-size: 0.95rem;
    outline: none;
  }
  #admin-action-modal input:focus,
  #admin-action-modal textarea:focus {
    box-shadow: 0 0 0 3px rgba(50,115,220,0.12);
    border-color: #3478f6;
  }

  /* Buttons row */
  #admin-action-modal .modal-inner > div:last-child {
    display: flex;
    justify-content: flex-end;
    gap: 8px;
    margin-top: 8px;
  }
  #admin-action-modal button {
    padding: 8px 12px;
    border-radius: 8px;
    border: 1px solid transparent;
    background: #f3f4f6;
    color: #111;
    font-weight: 600;
  }
  #admin-action-modal button#admin-action-confirm {
    background: #0b74ff;
    color: #fff;
    border-color: rgba(11,116,255,0.9);
  }
  #admin-action-modal button:hover { filter: brightness(.98); }
  #admin-action-modal button:active { transform: translateY(1px); }

  /* Table styling (small enhancements) */
  table { width: 100%; border-collapse: collapse; border: 1px solid #e6e6e6; }
  table th, table td { padding: 10px 12px; border-bottom: 1px solid #f0f0f0; vertical-align: middle; }
  table thead th { background: #fafafa; font-weight: 700; color: #222; }
  tr[data-status="suspended"] td { opacity: 0.92; }
  tr[data-status="payment_required"] td { background: #fff8e6; }

  /* Small responsive tweaks */
  @media (max-width: 700px) {
    #admin-action-modal .modal-inner { padding: 14px; border-radius: 8px; }
    table th, table td { padding: 8px; font-size: 0.95rem; }
    #admin-action-modal .modal-inner > div:last-child { flex-direction: column-reverse; align-items: stretch; }
    #admin-action-modal button { width: 100%; }
  }
</style>

