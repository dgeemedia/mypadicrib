<!--views/admin/dashboard.ejs-->
<section class="container">
  <h1>Admin Dashboard</h1>

  <% if (pending && pending.length) { %>
    <section>
      <h2>Pending Listings</h2>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Owner</th>
            <th>Price (per night)</th>
            <th>Verification</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% pending.forEach(function(l, idx) { %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><a href="/listings/<%= l.id %>"><%= l.title %></a></td>
              <td><%= l.owner_name || 'Unknown' %></td>
              <td>&#8358;<%= l.price %></td>
              <td>
                <% if (l.verification_id && l.selfie_path) { %>
                  <a href="/admin/verification-file/<%= l.verification_id %>/selfie" target="_blank" rel="noopener">View Selfie</a><br>
                <% } %>

                <% if (l.verification_id && l.id_card_path) { %>
                  <a href="/admin/verification-file/<%= l.verification_id %>/id_card" target="_blank" rel="noopener">View ID Card</a><br>
                <% } %>

                <% if (l.id_number) { %>
                  <small><strong>ID#:</strong> <%= l.id_number %></small>
                <% } %>
              </td>
              <td><%= new Date(l.created_at).toLocaleString() %></td>

              <td>
                <% /* Actions: pending -> Approve / Reject */ %>
                <% if (l.status === 'pending') { %>
                  <form method="POST" action="/admin/listings/<%= l.id %>/approve" style="display:inline">
                    <button type="submit">Approve</button>
                  </form>

                  <form method="POST" action="/admin/listings/<%= l.id %>/reject" style="display:inline" class="reject-form">
                    <input type="hidden" name="reason" class="reject-reason-input" value="">
                    <button type="button" class="reject-btn" data-listing-id="<%= l.id %>">Reject</button>
                  </form>
                <% } else if (l.status === 'approved') { %>
                  <form method="POST" action="/admin/listings/<%= l.id %>/suspend" style="display:inline" onsubmit="return confirm('Suspend this listing?')">
                    <button type="submit">Suspend</button>
                  </form>

                  <form method="POST" action="/admin/listings/<%= l.id %>/delete" style="display:inline" onsubmit="return confirm('Permanently delete this listing? This cannot be undone.')">
                    <button type="submit">Delete</button>
                  </form>
                <% } else if (l.status === 'suspended') { %>
                  <form method="POST" action="/admin/listings/<%= l.id %>/reactivate" style="display:inline" onsubmit="return confirm('Reactivate listing?')">
                    <button type="submit">Reactivate</button>
                  </form>

                  <form method="POST" action="/admin/listings/<%= l.id %>/delete" style="display:inline" onsubmit="return confirm('Permanently delete this listing? This cannot be undone.')">
                    <button type="submit">Delete</button>
                  </form>
                <% } else { %>
                  <span><%= l.status %></span>
                <% } %>

                <a href="/listings/<%= l.id %>" style="margin-left:8px">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  <% } else { %>
    <p>No pending listings.</p>
  <% } %>

  <hr>

  <!-- USERS MANAGEMENT -->
  <section>
    <h2>Users</h2>

    <% if (users && users.length) { %>
      <table>
        <thead>
          <tr>
            <th>#</th><th>Name</th><th>Email</th><th>Role</th><th>Status</th><th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u, i){ %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td>
                <%= u.status %>
                <% if (u.suspended_until) { %>
                  <br><small>until <%= new Date(u.suspended_until).toLocaleString() %></small>
                <% } %>
              </td>
              <td>
                <% if (u.status !== 'suspended') { %>
                  <form method="POST" action="/admin/users/<%= u.id %>/suspend" class="suspend-form" style="display:inline">
                    <input type="hidden" name="suspended_until" class="suspended-until-input" value="">
                    <input type="hidden" name="reason" class="suspend-reason-input" value="">
                    <button type="button" class="suspend-user-btn" data-user-id="<%= u.id %>">Suspend</button>
                  </form>
                <% } else { %>
                  <form method="POST" action="/admin/users/<%= u.id %>/reactivate" class="reactivate-form" style="display:inline">
                    <input type="hidden" name="reason" class="reactivate-reason-input" value="">
                    <button type="button" class="reactivate-user-btn" data-user-id="<%= u.id %>">Reactivate</button>
                  </form>
                <% } %>

                <form method="POST" action="/admin/users/<%= u.id %>/delete" style="display:inline" onsubmit="return confirm('Delete user permanently? This cannot be undone.')">
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No users found.</p>
    <% } %>
  </section>

  <hr>

  <section>
    <h2>Create Staff Account</h2>
    <form method="POST" action="/admin/staff/create">
      <label>Name<br><input name="name" required></label><br>
      <label>Email<br><input name="email" type="email" required></label><br>
      <label>Phone<br><input name="phone"></label><br>
      <label>Password<br><input name="password" type="password" required></label><br>
      <button type="submit">Create Staff</button>
    </form>
  </section>

  <hr>

  <section>
    <h2>Add Provider (Laundry / Food)</h2>
    <form method="POST" action="/admin/providers/add">
      <label>Type<br>
        <select name="type" required>
          <option value="laundry">Laundry Provider</option>
          <option value="food">Food Vendor</option>
        </select>
      </label><br>

      <label>Name<br><input name="name" required></label><br>
      <label>Phone<br><input name="phone"></label><br>
      <label>Email<br><input name="email" type="email"></label><br>

      <button type="submit">Add Provider</button>
    </form>
  </section>

  <hr>

  <section>
    <h2>Admin Quick Links</h2>
    <ul>
      <li><a href="/admin">Refresh dashboard</a></li>
      <li><a href="/owner/dashboard">Go to owner dashboard</a></li>
      <li><a href="/listings">Browse listings (approved)</a></li>
    </ul>
    <p><a href="/messages">Inbox / Messages</a></p>
  </section>
</section>

<script>
document.addEventListener('click', function(e){
  // listing reject button (existing)
  if (e.target.matches('.reject-btn')) {
    const btn = e.target;
    const reason = prompt('Enter reason for rejection (this will be sent to the owner):');
    if (reason === null) return; // user cancelled
    const form = btn.closest('.reject-form');
    const input = form.querySelector('.reject-reason-input');
    input.value = reason.trim() || 'No reason provided';
    form.submit();
  }

  // suspend user: prompt for until-date (optional) and reason, then submit form
  if (e.target.matches('.suspend-user-btn')) {
    const btn = e.target;
    const form = btn.closest('.suspend-form');
    const untilInput = form.querySelector('.suspended-until-input');
    const reasonInput = form.querySelector('.suspend-reason-input');

    const until = prompt('Enter suspended-until date and time (ISO or "YYYY-MM-DD HH:MM"), or leave empty for indefinite:');
    if (until === null) return; // cancelled
    const reason = prompt('Enter reason for suspension (this will be recorded and sent to user):');
    if (reason === null) return;

    untilInput.value = until.trim() || '';
    reasonInput.value = reason.trim() || 'Violation of platform rules';
    form.submit();
  }

  // reactivate user: prompt for optional note/reason before submit
  if (e.target.matches('.reactivate-user-btn')) {
    const btn = e.target;
    const form = btn.closest('.reactivate-form');
    const reasonInput = form.querySelector('.reactivate-reason-input');

    const reason = prompt('Enter note/reason for reactivation (optional):');
    if (reason === null) return; // cancelled
    reasonInput.value = reason.trim() || 'Restitution confirmed';
    form.submit();
  }
});
</script>
